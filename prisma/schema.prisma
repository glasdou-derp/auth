generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  email    String @unique
  password String
  roles    Role[]

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  createdBy String? @map("created_by")
  creator   User?   @relation("UserCreator", fields: [createdBy], references: [id])
  creatorOf User[]  @relation("UserCreator")

  updatedBy String? @map("updated_by")
  updater   User?   @relation("UserUpdater", fields: [updatedBy], references: [id])
  updaterOf User[]  @relation("UserUpdater")

  deletedBy String? @map("deleted_by")
  deleter   User?   @relation("UserDeleter", fields: [deletedBy], references: [id])
  deleterOf User[]  @relation("UserDeleter")

  @@map("user")
}

enum Role {
  User
  Admin
  Moderator
  Guest
}
